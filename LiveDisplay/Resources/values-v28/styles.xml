<resources>
  <!--Base application theme-->
  <style name="LiveDisplayTheme" parent="Theme.AppCompat.Light">
    <!-- Main theme colors -->
    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/colorAccent</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>
  <!--the following Style is for No action bar-->
  <style name="LiveDisplayTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <!--Style for toolbar-->
  <style name="AppToolbar" parent="LiveDisplayTheme">
    <item name="android:textColorPrimary">@android:color/white</item>
  </style>
  <!--Style for Popup menu in overflow menu-->
  <style name="popupTheme" parent="LiveDisplayTheme">
  </style>

  <!--Dark version of base Main theme-->
  <style name="LiveDisplayThemeDark" parent="Theme.AppCompat">
    <!-- Main theme colors -->
    <!--   your app branding color for the app bar -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!--   darker variant for the status bar and contextual app bars -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/colorAccent</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    <item name="android:windowLayoutInDisplayCutoutMode">
      shortEdges
    </item>
  </style>
  <!--the following Style is for No action bar dark-->
  <style name="LiveDisplayThemeDark.NoActionBar" parent="LiveDisplayThemeDark">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
</resources>