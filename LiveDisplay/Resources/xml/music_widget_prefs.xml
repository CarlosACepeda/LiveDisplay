<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
      android:title="@string/musicwidget"
      android:icon="@drawable/ic_music_widget_24dp">
  <PreferenceCategory
      android:title="@string/musicwidget"
      app:iconSpaceReserved="false">
    <SwitchPreference
      android:defaultValue="true"
      android:key="musicwidgetenabled?"
      android:title="@string/musicwidgetenabled"
      app:iconSpaceReserved="false" />
    <SwitchPreference
      android:defaultValue="true"
      android:key="showalbumart?"
      android:title="@string/showalbumart"
      app:iconSpaceReserved="false" />
  </PreferenceCategory>
  <PreferenceCategory
      android:title="@string/advanced"
      app:iconSpaceReserved="false">
    <ListPreference
            android:selectable="false"
          android:enabled="false"
          android:defaultValue="1"
          android:key="musicwidgetcontrolmethod"
          android:title="@string/musicwidgetcontrolmethod"
          android:summary="@string/m_widgetcontrolmethodsession"
          android:entries="@array/listentriesmusicwidgetcontrolmethod"
          android:entryValues="@array/listvaluesmusicwidgetcontrolmethod"
          app:iconSpaceReserved="false" />
    <SwitchPreference
      android:defaultValue="false"
      android:selectable="true"
      android:enabled="true"
      android:key="hidenotificationwhenmediaplaying?"
      android:summary="@string/hidenotifwhenmediaplayingdesc"
      android:title="@string/m_widgethidenotificationwhenmediaplaying"
      app:iconSpaceReserved="false" />
    <SwitchPreference
      android:defaultValue="false"
      android:selectable="true"
      android:enabled="true"
      android:key="launchnotification?"
      android:summary="@string/launchnotification_desc"
      android:title="@string/launchnotification"
      app:iconSpaceReserved="false" />
    <SwitchPreference
      android:defaultValue="false"
      android:selectable="true"
      android:enabled="true"
      android:key="disableartworkupdateonsamealbum"
      android:title="@string/disableartworkupdateonsamealbum"
      android:summary="@string/disableartworkupdateonsamealbum_desc"
      app:iconSpaceReserved="false" />
  </PreferenceCategory>
</PreferenceScreen>