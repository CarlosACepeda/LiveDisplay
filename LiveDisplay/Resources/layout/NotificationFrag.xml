<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_gravity="bottom"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:background="?android:selectableItemBackground"
    tools:visibility="visible"
    android:visibility="invisible">
	
    <LinearLayout
		android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_weight="8"
			android:layout_height="wrap_content">
			<TextView
				android:text="Spotify"
				android:fontFamily="sans-serif-condensed"
				android:textColor="@color/primary_text_default_material_dark"
				android:textStyle="italic"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/tvAppName"
				android:textSize="16dp" />
			<Space
				android:layout_width="3dp"
				android:layout_height="wrap_content" />
			<TextView
				android:text="8:13 PM"
				android:fontFamily="sans-serif-condensed"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/primary_text_default_material_dark"
				android:textStyle="italic"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:id="@+id/tvWhen" />
            <Space
                android:layout_width="3dp"
                android:layout_height="wrap_content"/>
            <TextView
				android:text="Trap Workout"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16dp"
                android:id="@+id/tvnotifSubtext"
                android:maxLines="1"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="@color/primary_text_default_material_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/toggleCollapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
		</LinearLayout>
		<ImageButton
			android:id="@+id/closenotificationbutton"
			android:layout_weight="2"
			android:background="@android:color/transparent"
			android:layout_height="wrap_content"
			android:layout_width="0dp"
			android:src="@drawable/baseline_close_white_18"
			/>
    </LinearLayout>
    <TextView
		android:textSize="22dp"
		android:text="One by One - Hunter Siegel Remix"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle" />
    <TextView
		android:text="GG Magree, Hunter Segel"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primary_text_default_material_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvText"
		android:textSize="19dp"
        android:maxLines="6"
        android:minLines="0" />
    <ProgressBar        
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/notificationprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<LinearLayout
        android:id="@+id/notificationActions"
		android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="visible"
		>
<!--			<ImageButton
				android:id="action1"
				android:background="@android:color/transparent"
                android:layout_width="0dp"
				android:layout_weight="0.2"
                android:layout_height="match_parent"/>
			<ImageButton
				android:id="action2"
				android:background="@android:color/transparent"
                android:layout_width="0dp"
				android:layout_weight="0.2"
                android:layout_height="match_parent"/>
			<ImageButton
				android:id="action3"
				android:background="@android:color/transparent"
                android:layout_width="0dp"
				android:layout_weight="0.2"
                android:layout_height="match_parent"/>
			<ImageButton
				android:id="action4"
				android:background="@android:color/transparent"
				android:visibility="invisible"
                android:layout_width="0dp"
				android:layout_weight="0.2"
                android:layout_height="match_parent"/>
			<ImageButton
				android:id="action5"
				android:background="@android:color/transparent"
				android:visibility="invisible"
                android:layout_width="0dp"
				android:layout_weight="0.2"
                android:layout_height="match_parent"/>-->
		</LinearLayout>
		<LinearLayout
			android:id="@+id/inlineNotificationContainer"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:weightSum="10"
			android:visibility="gone"
			>
			<EditText
				android:textSize="15dp"
                android:inputType="text"
                android:fontFamily="sans-serif-condensed"
				android:id="@+id/tvInlineText"
				android:layout_width="0dp"
				android:layout_weight="8"
				android:layout_height="wrap_content"
				/>
			<ImageButton
				android:id="@+id/sendInlineResponseButton"
				android:layout_width="0dp"
				android:layout_weight="2"
				android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/baseline_send_white_24"
			/>
		</LinearLayout>
	</FrameLayout>
</LinearLayout>